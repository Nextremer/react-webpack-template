{
  "name": "react_template",
  "version": "1.0.0",
  "description": "React + Webpack + Bable Template",
  "main": "index.js",
  "scripts": {
    "clean:www": "rm -rf www",
    "clean": "npm run clean:www",
    "copy:html": "mkdir -p www && cp src/index.html www/",
    "copy:css": "mkdir -p www/assets/css && cp src/css/*.css www/assets/css/",
    "copy": "npm run copy:html && npm run copy:css",
    "build": "npm run clean && npm run copy && `npm bin`/webpack",
    "lint": "`npm bin`/eslint src; exit 0",
    "mocha": "`npm bin`/mocha; exit 0",
    "test": "npm run lint && npm run mocha",
    "watch:html": "cpx --watch src/index.html www",
    "watch:webpack": "`npm bin`/webpack --watch",
    "watch:browser": "`npm bin`/browser-sync start --config bs-config.js",
    "watch": "npm run watch:html & npm run watch:webpack & npm run watch:browser",
    "start": "npm run build && npm run watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "~15.2.1",
    "react-addons-update": "^15.2.1",
    "react-css-modules": "^3.7.6",
    "react-dom": "~15.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-assign": "^6.5.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "browser-sync": "^2.13.0",
    "chai": "^3.5.0",
    "cpx": "^1.3.1",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "eslint": "^3.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "mocha": "^2.5.3",
    "mocha-webpack": "^0.5.0",
    "postcss-color-hex-alpha": "^2.0.0",
    "postcss-loader": "^0.9.1",
    "postcss-mixins": "^5.0.0",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "react-addons-test-utils": "^15.1.0",
    "sinon": "^1.17.4",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "watch": "^0.19.1",
    "webpack": "~1.13.1"
  }
}
